#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

echo "we will compile things"

BUILD_DIR=$1/frontend
CACHE_DIR=$2
ENV_DIR=$3
BP_DIR=`cd $(dirname $0); cd ..; pwd`

echo "BP_DIR is: $BP_DIR"

# Switch to new Node auto build behavior ahead of release
export NEW_BUILD_SCRIPT_BEHAVIOR=true

echo "runing npm install --prefix frontend"
monitor "npm-install" npm install --prefix frontend --production="$production" --unsafe-perm --userconfig "$build_dir/.npmrc" 2>&1
